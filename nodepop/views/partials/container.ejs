<div class="container">
    
    <h1 class="page-header"> <%= title %> :</h1>
    
    <section class="item-list clearfix">

    <!-- Incluimos los items -->        
    <% include item %>
        
    <!-- Paginación : si el número de elmentos a mostrar es igual o menor al limite de elemnetos no se muestra paginación-->
    <% if(totalPage > 1){ %>

        <div class="text-center alone">
        
            <ul class="pagination">
            <% for (let i=1; i<=totalPage; i++){%>
                <li class="<% if(page==i){ %>active<%}%>" ><a href="/?page=<%=i%><%if(filters!=""){%><%=filters%><%}%>"><%=i%></a></li>
            <%}%>
                
            </ul>

        </div>
    <%}%>
    </section>
</div>